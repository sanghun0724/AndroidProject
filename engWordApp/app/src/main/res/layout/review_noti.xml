<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:layout_width="128sp"
            android:layout_height="12sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:background="@color/colorAccentTransGreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

<!--@string/review_noti은 '보카보까 앱이 \n도움이 되셨나요?' 로 넣어주세요.  -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/review_noti"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/uplayout">

        <Button
            android:id="@+id/star1"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/icon_star" />

        <Button
            android:id="@+id/star2"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/icon_star" />

        <Button
            android:id="@+id/star3"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/icon_star" />

        <Button
            android:id="@+id/star4"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/icon_star" />

        <Button
            android:id="@+id/star5"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/icon_star" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReview"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorAccentBule"
        android:text="리뷰남기기"
        android:textSize="21sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</LinearLayout>