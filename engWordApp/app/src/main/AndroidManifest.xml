<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ogrg.techtown.vocavocca">
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>
        <activity android:name="com.ogrg.techtown.vocavocca.init.LoadingActivity" />
        <activity android:name="com.ogrg.techtown.vocavocca.SearchActivity" />
        <activity android:name="com.ogrg.techtown.vocavocca.FavoriteActivity" />
        <activity android:name="com.ogrg.techtown.vocavocca.purchase_noti" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
        <activity android:name="com.ogrg.techtown.vocavocca.review_noti" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
        <activity
            android:name="com.ogrg.techtown.vocavocca.MainActivity"
            android:launchMode="singleInstance">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ogrg.techtown.vocavocca.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>