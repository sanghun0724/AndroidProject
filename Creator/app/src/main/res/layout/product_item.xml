<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="260dp"
    android:background="#d7f1ea"

    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/character"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                >
            </ImageView>
            <RelativeLayout
                android:layout_gravity="bottom"
                android:id="@+id/profile"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/small_man"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/tex1"
                    android:layout_toRightOf="@id/small_man"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shaprt Pdwer"
                    android:textSize="24sp"
                    android:textColor="#000000">
                </TextView>
                <TextView
                    android:id="@+id/tex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/small_man"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="google ceo"
                    android:textSize="18sp"></TextView>

                <!--           <LinearLayout-->
                <!--               android:layout_width="40dp"-->
                <!--               android:layout_height="40dp"-->
                <!--               android:layout_marginLeft="322dp"-->
                <!--               android:background="@drawable/rounded"-->
                <!--               android:layout_marginTop="18dp"-->
                <!--               android:layout_marginBottom="18dp"></LinearLayout>-->

                <ImageButton
                    android:id="@+id/button_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="292dp"
                    android:background="#ffffff"
                    android:elevation="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:src="@drawable/ic_send_black_24dp"
                    ></ImageButton>


            </RelativeLayout>


        </FrameLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
